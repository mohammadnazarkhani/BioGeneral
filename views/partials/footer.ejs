    footer {
        background-color: var(--header-color);
        color: #bbb;
        display: grid;
        gap: 30px;
        padding: 60px 50px 0 50px;
        border-top: #ccc 1px solid;
        width: 100%;
    }

    footer h1 {
        font-size: 28px;
        color: #ffffff;
        text-transform: capitalize;
        margin-bottom: 10px;
        font-weight: 500;
        position: relative;
    }

    footer h1::before {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        background-color: #e91e63;
        height: 2px;
        box-sizing: border-box;
        width: 100px;
