        grid-area: contact;
    }

    section#contact_us ul li:not(:last-child) {
        margin-bottom: 10px;
    }

    section#contact_us ul li a {
        font-size: 16px;
        text-decoration: none;
        text-transform: capitalize;
        color: #bbbbbb;
        font-weight: 300;
        display: block;
        transition: all 0.3s ease;
    }

    section#contact_us ul {
        margin-top: 10px;
        list-style: none;
    }

    section#contact_us ul li a:hover {
        color: white;
        padding-left: 8px;
    }

    section#copywrite {
        margin-top: 50px;
        grid-area: copywrite;
        text-align: center;
        font-size: small;
    }

    span#separator_line {
        grid-area: line;
    }

    a {
        text-decoration: none;
